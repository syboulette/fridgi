<%= simple_form_for(@recipe) do |f| %>
  <%= f.input :title, label: "Recipe Title" %>
  <%= f.input :prep_time, placeholder: "in minutes" %>
  <%= f.input :cooking_time, label: "Cook Time", placeholder: "in minutes"  %>
  <%= f.input :total_time, placeholder: "in minutes"   %>
  <%= f.input :difficulty, collection: %w[1 2 3 4 5], label: "Difficulty level: 1 = easy, 5 = challenging" %>
  <%= f.association :dietary_information_recipes, collection: %w[Vegetarian Vegan Pescetarian Gluten-Free Dairy-Free Low-Carb Healthy], label: "Dietary information" %>
  <%= f.input :serving, label: "Servings" %>
  <%= f.input :image, as: :file, label: "Show us what it looks like:" %>
  <%= f.association :recipe_ingredients, as: "text", placeholder: "2 Apples, 5 Potatoes ..." %>
  <%= f.input :utensil, label: "Utensils", placeholder: "A salad bowl" %>
  <%= f.input :instruction, as: :text, placeholder: "Describe each step of the recipe." %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
