<%= form_with(model: [@list, list_ingredient], data: { controller: "list-ingredients", action: "ajax:success->list-ingredients-edit-form#handleSuccess" }) do |form| %>
  <div class="form-group">
    <%= form.label :ingredient_id, "Ingredient" %>
    <%= form.collection_select :ingredient_id, Ingredient.all, :id, :name, {}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :unit %>
    <%= form.text_field :unit, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn btn-secondary", data: { action: "click->list-ingredients-edit-form#closeEditForm" } %>
  </div>
<% end %>
