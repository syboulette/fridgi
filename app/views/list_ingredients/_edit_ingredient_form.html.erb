<%= form_with model: [@list, list_ingredient], data: { target: "forms.formTemplate" }, class: "edit_form hidden" do |form| %>
  <div class="field">
    <%= form.collection_select(:ingredient_id, Ingredient.all, :id, :name, { include_blank: true }, { class: 'form-control select2' }) %>
  </div>
  <div class="field">
    <%= form.number_field :quantity, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.collection_select :unit_id, Unit.all, :id, :name, { include_blank: true }, { class: 'select2', value_method: :name } %>
  </div>
  <div class="actions">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>

