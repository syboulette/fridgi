<%= simple_form_for [@fridge, @fridge_ingredient] do |f| %>
  <%= f.input :name, collection: @ingredients, input_html: (edit ? {value: @fridge_ingredient.ingredient.name} : {value: ""}) %> 
  <%= f.input :quantity %>
  <%= f.input :unit %>
  <%= f.button :submit, (edit ? "Save" : "+ Ingredient")%>
<% end %>