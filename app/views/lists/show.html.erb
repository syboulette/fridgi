<h1>List 1</h1>
<div class="ingredient-list">
  <% @list_ingredients.each do |list_ingredient| %>
      <div class="line">
        <h6 class="line-text list_ingredient-name"><em><%= list_ingredient.name %></em></h6>
        <p class="line-text list-quantity"><%= list_ingredient.quantity %></p>
        <p class="line-text list-extract">Created on <%= list.created_at.strftime("%d %b %Y") %></p>
        <p><%= link_to "add ingredient", list_path(list), class: "btn btn-info btn-sm "%></p>
      </div>
    <% end %>
  </div>
<p><%= link_to "edit my list", edit_list_path, class: "btn btn-info btn-sm "%></p>
