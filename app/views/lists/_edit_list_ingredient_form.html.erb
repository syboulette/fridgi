<%= simple_form_for list_ingredients do |f| %>
  <%= f.association :ingredients do |w| %>
    <%= w.input :name, as: :text %>
    <% end %>
  <%= f.input :quantity, label: "Quantity" %>
  <%= f.input :unit, label: "Unit" %>
  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    add ingredient
  <% end %>
<% end %>
