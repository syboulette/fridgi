<section class="h-100 h-custom gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12">
        <div class="card card-registration card-registration-2" style="border-radius: 15px;">
          <div class="card-body p-0">
            <div class="row g-0">
              <div class="col-lg-6">
                <div class="p-5">
                  <h3 class="fw-normal mb-5" style="color: #4835d4;">General Infomation</h3>
                  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
                    <%= f.error_notification %>

                  <div class="row">
                    <div class="col-md-6 mb-4 pb-2">
                      <div class="form-input">
                        <%= f.input :first_name, label: false,
                                    required: true,
                                    autofocus: true,
                                    input_html: { placeholder: "First name", autocomplete: "given-name", class: "form-control form-control-lg" }
                                    %>

                      </div>
                    </div>

                    <div class="col-md-6 mb-4 pb-2">
                      <div class="form-input">
                        <%= f.input :last_name, label: false,
                                    required: true,
                                    input_html: { placeholder: "Last name", autocomplete: "family-name", class: "form-control form-control-lg" }
                                    %>
                      </div>
                    </div>
                  </div>
                  <div class="mb-4 pb-2">
                    <div class="form-input">
                      <%= f.input :password, label: false,
                                  required: true,
                                  #hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                  input_html: { placeholder: "Password", autocomplete: "new-password", class: "form-control form-control-lg" }
                                  %>
                    </div>
                  </div>

                  <div class="mb-4 pb-2">
                    <div class="form-input">
                      <%= f.input :password_confirmation, label: false,
                                  required: true,
                                  input_html: { placeholder: "Password confirmation", autocomplete: "new-password", class: "form-control form-control-lg" }
                                  %>
                    </div>
                  </div>

                  <div class="mb-4 pb-2">
                    <div class="form-input">
                      <%= f.input :email, label: false,
                                  required: true,
                                  input_html: { placeholder: "Email", autocomplete: "email", class: "form-control form-control-lg" }
                                  %>
                    </div>
                  <div>
                </div>
              </div>
              <div class="col-lg-6">
                <div class="p-5">
                  <h3 class="fw-normal mb-5">Contact Details</h3>


                  <div class="mb-4 pb-2">
                    <div class="form-input form-white">
                          <%= f.input :address, label: false,
                                      required: true,
                                      input_html: { autocomplete: "street-address", class: "form-control form-control-lg" }
                                      %>
                    </div>
                  </div>

                  <div class="mb-4 pb-2">
                    <div class="form-input form-white">
                          <%= f.input :country, label: false,
                                      required: true,
                                      input_html: { class: "form-control form-control-lg" } %>
                    </div>
                  </div>

                  <div class="mb-4 pb-2">
                    <div class="form-input form-white">
                            <%= f.input :city, label: false,
                                        required: true,
                                        input_html: { class: "form-control form-control-lg" } %>
                    </div>
                  </div>

                  <div class="mb-4 pb-2">
                    <div class="form-input form-white">
                            <%= f.input :post_code, label: false,
                                        required: true,
                                        input_html: { autocomplete: "postal-code", class: "form-control form-control-lg" }
                                        %>
                    </div>
                  </div>

                  <div class="form-actions">
                    <%= f.button :submit, "Register", class: "btn btn-primary align-center" %>
                  </div>
                  <% end %>
                  <%= render "devise/shared/links" %>

                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>






