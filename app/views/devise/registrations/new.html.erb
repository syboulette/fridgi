<div class="container py-5 h-100">
  <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "given-name", class: "form-group" }; %>
      <%= f.input :last_name,
                  required: true,
                  input_html: { autocomplete: "family-name", class: "form-group" } %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password", class: "form-group" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password", class: "form-group" } %>
      <%= f.input :address,
                  required: true,
                  input_html: { autocomplete: "street-address", class: "form-group" } %>
      <%= f.input :country,
                  required: true,
                  input_html: { class: "form-group" } %>
      <%= f.input :city,
                  required: true,
                  input_html: { class: "form-group" } %>
      <%= f.input :post_code,
                  required: true,
                  input_html: { autocomplete: "postal-code", class: "form-group" } %>
      <%= f.input :email,
                  required: true,
                  input_html: { autocomplete: "email", class: "form-group" }%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
